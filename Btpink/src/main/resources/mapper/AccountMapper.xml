<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.btpink.www.dao.AccountMapper">
	<!--회원가입 -->
	<insert id="AccountInsert" parameterType="Account">
		insert into account
		values(
		#{memNo}
		,#{name}
		,#{type}
		,#{id}
		,#{pw}
		,#{email}
		,#{phone}
		,#{status}
		)
	
		 
	</insert>
	<!-- 중복확인 -->
	<select id="idOverlap" parameterType="Account" resultType="Account">
		select * from account where
		id= #{id}
	</select>
	<!--로그인 -->
	<select id="login" parameterType="Account" resultType="Account">
		select * from account where
		id= #{id} and pw = #{pw}
	</select>
	<select id="accountCheck" resultType="Aapply">
		select  a.memno,a.id as id,a.name as parentName, s.name as studentname,a.phone as tell, a.status
		from
  			(
  			select * 
    		from 
    			account 
 		 ) a, student s
  		where 
  			a.memno = s.parentno
      	order by 
      		status asc
	</select>
	<update id="signUpdate" parameterType="Account">
		update 
			account 
		set 
		<if test="status == 0">
			status = 1
		</if>
		<if test="status == 1">
			status = 0
		</if>			
		where
			memno = #{memNo}
	</update>
</mapper>
